{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Packages",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--require", "${workspaceRoot}/test/test.env.js",
        "--require", "ts-node/register",
        "--no-timeouts",
        "--colors", "--recursive",
        "${workspaceRoot}/packages/*/test/*.spec.ts",
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "npm: pretest",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true
    },
    {
      "name": "Test JS Scripts",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors", "--recursive",
        "${workspaceRoot}/scripts/test/*.spec.js",
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Build",
      "program": "${workspaceFolder}/scripts/run-rollup.js",
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}
